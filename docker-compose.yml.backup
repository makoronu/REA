version: '3.8'

services:
  postgres:
    image: postgres:15
    container_name: rea-postgres
    environment:
      POSTGRES_DB: rea_db
      POSTGRES_USER: rea_user
      POSTGRES_PASSWORD: rea_password
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    restart: unless-stopped

  redis:
    image: redis:7
    container_name: rea-redis
    ports:
      - "6379:6379"
    restart: unless-stopped

  rea-api:
    build: ./rea-api
    container_name: rea-api
    ports:
      - "8000:8000"
    depends_on:
      - postgres
      - redis
    environment:
      - DATABASE_URL=postgresql://rea_user:rea_password@postgres/rea_db
      - REDIS_URL=redis://redis:6379
    volumes:
      - ./rea-api:/app
      - ./rea-api/uploads:/app/uploads
    restart: unless-stopped

  rea-scraper:
    build: ./rea-scraper
    container_name: rea-scraper
    depends_on:
      - postgres
      - redis
    environment:
      - DATABASE_URL=postgresql://rea_user:rea_password@postgres/rea_db
      - DISPLAY=:99
    volumes:
      - ./rea-scraper:/app
      - ./rea-scraper/downloads:/app/downloads
    restart: unless-stopped

  rea-publisher:
    build: ./rea-publisher
    container_name: rea-publisher
    depends_on:
      - postgres
      - rea-api
    environment:
      - DATABASE_URL=postgresql://rea_user:rea_password@postgres/rea_db
      - API_URL=http://rea-api:8000
    volumes:
      - ./rea-publisher:/app
    restart: unless-stopped

volumes:
  postgres_data:
    driver: local
